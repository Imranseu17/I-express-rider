<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/onboardrectangle"
    tools:context=".view.ui.LoginActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/logo_image">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/back"
            />


        <TextView
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/log_in"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"
            android:textAppearance="@style/log_in"
            android:gravity="bottom"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_below="@id/top_layout">

        <TextView
            android:id="@+id/passwordllabelled"
            android:layout_width="324dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="Password"
            android:textAppearance="@style/labelled"
            android:lineSpacingExtra="7sp"
            android:translationY="-3.5sp"
            android:gravity="top"
            />

        <EditText
            android:id="@+id/passEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:drawableRight="@null"
            android:paddingRight="20dp"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/mainText"
            android:background="@drawable/edit_text_base"
            android:fontFamily="@font/calibri"
            android:hint="....."
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:maxLines="1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/remeber_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@+id/edit_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/box_rember"
            android:layout_marginStart="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_gravity="center"/>


        </LinearLayout>

        <TextView
            android:id="@+id/labelled"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:text="@string/remeber_text"
            android:textAppearance="@style/labelled"
            android:lineSpacingExtra="6sp"
            android:translationY="-3sp"
            android:layout_marginTop="3dp"
            android:gravity="top"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rectangle_login"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/remeber_layout"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rectangle_1"
        >

        <TextView
            android:id="@+id/log_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:textAppearance="@style/log_in"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/not_registe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rectangle_login">


        <TextView
            android:id="@+id/forgetPassLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Forget Password"
            android:textColor="#6342E8"
            android:textSize="18dp"
            android:textAppearance="@style/not_registe"
            />

    </LinearLayout>









</RelativeLayout>

